@model MusicSystem.ViewModels.User.CreateVM;
@{
    this.Layout = "~/Views/Shared/MyLayout.cshtml";
}

<div class="col">
    <fieldset>
        <legend> Register</legend>
        <form method="post" action="/Login/Register">
            <div class="row">
                <span style="color:red">@Html.ValidationMessage("authErr")</span>
                <div class="col">
                    <span style="color:red"> @Html.ValidationMessageFor(m => m.Username)</span>
                    @Html.LabelFor(m => m.Username)
                    @Html.TextBoxFor(m => m.Username)
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <span style="color:red"> @Html.ValidationMessageFor(m => m.Password)</span>
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <span style="color:red"> @Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword)
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <input type="submit" value="Register" />
                </div>
            </div>
        </form>
    </fieldset>
</div>