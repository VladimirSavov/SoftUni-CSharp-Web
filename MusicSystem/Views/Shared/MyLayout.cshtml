@using MusicSystem.Entities;
@using MusicSystem.ExtensionMethods;

@{
    Users loggedUser = this.ViewContext.HttpContext.Session.GetObject<Users>("loggedUser");
}
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        ul {
            text-decoration: none;
            float: left;
        }

        li {
            list-style-type: none;
            float: left;
            padding: 0 5px;
        }

        th {
            padding: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <p style="float:right;">
                    Hi,
                    <span>
                        @(loggedUser == null ? "Stranger" : loggedUser.Username)
                    </span>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h1> MusicSystem </h1>
            </div>
        </div>
        <div class="row">
            @RenderBody()
        </div>
    </div>
</body>
</html>