@model IEnumerable<MusicSystem.Entities.Playlists>

@{
    ViewData["Title"] = "Playlists";
}

<h1 class="d-flex justify-content-center fw-bold">Playlists</h1>

<p>
    <a asp-action="Create" class="fw-bold">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-active">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-controller="PlaylistSongs" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
